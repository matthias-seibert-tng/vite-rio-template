{
    "name": "@rio-cloud/vite-rio-template",
    "description": "The RIO Vite Frontend template.",
    "private": true,
    "version": "0.1.0",
    "scripts": {
        "start": "vite",
        "build": "vite build",
        "preview": "vite preview",
        "test": "jest __test__",
        "license-check": "license-checker --production --json --onlyAllow \"`cat whitelist.txt`\" --excludePackages \"@rio-cloud/vite-rio-template@0.1.0\" --out licenses.txt",
        "lint": "eslint src",
        "lint-fix": "npm run lint -- --fix",
        "audit": "npm audit --production --registry https://registry.npmjs.org --parseable",
        "format-code": "prettier --write \"src/**/*.{js,jsx,ts,tsx,json,css,scss,md}\"",
        "pull-translations": "phrase pull --access_token $PHRASEAPP_ACCESS_TOKEN && npm run merge-translations",
        "push-translations": "phrase push --access_token $PHRASEAPP_ACCESS_TOKEN",
        "merge-translations": "nodenv ./mergeTranslations.js",
        "cypress-open": "cypress open",
        "cypress-run": "cypress run",
        "cypress-ci": "start-server-and-test start http://localhost:3000 cypress-run"
    },
    "dependencies": {
        "@redux-devtools/extension": "^3.2.2",
        "@reduxjs/toolkit": "^1.8.3",
        "@rio-cloud/rio-notifications-component": "^0.2.2",
        "@rio-cloud/rio-session-expired-info": "0.9.12",
        "@rio-cloud/rio-uikit": "0.16.1-beta.15",
        "@rio-cloud/rio-user-menu-component": "^2.0.0",
        "@sentry/browser": "7.8.1",
        "events": "^3.3.0",
        "iframe-resizer-react": "^1.1.0",
        "lodash": "^4.17.21",
        "oidc-client-ts": "^2.0.5",
        "qs": "6.11.0",
        "react": "^18.2.0",
        "react-app-polyfill": "^3.0.0",
        "react-dom": "^18.2.0",
        "react-hook-form": "^7.34.2",
        "react-intl": "^5.24.8",
        "react-redux": "^8.0.2",
        "react-router": "^6.0.2",
        "react-router-dom": "^6.0.2"
    },
    "devDependencies": {
        "@babel/preset-env": "^7.18.10",
        "@babel/preset-react": "^7.18.6",
        "@babel/preset-typescript": "^7.18.6",
        "@testing-library/jest-dom": "^5.15.0",
        "@testing-library/react": "^13.3.0",
        "@testing-library/user-event": "^14.4.1",
        "@types/jest": "^28.1.6",
        "@types/lodash": "^4.14.176",
        "@types/node": "^18.6.3",
        "@types/qs": "^6.9.7",
        "@types/react": "^18.0.15",
        "@types/react-dom": "^18.0.6",
        "@types/react-redux": "^7.1.20",
        "@types/react-router": "^5.1.17",
        "@types/react-router-dom": "^5.3.2",
        "@typescript-eslint/eslint-plugin": "^5.32.0",
        "@typescript-eslint/parser": "^5.32.0",
        "@vitejs/plugin-react": "^2.0.0",
        "babel-plugin-transform-vite-meta-env": "^1.0.3",
        "cypress": "^10.4.0",
        "eslint": "^8.21.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-compat": "^4.0.2",
        "eslint-plugin-import": "^2.25.3",
        "eslint-plugin-jest": "^26.7.0",
        "eslint-plugin-prefer-arrow": "^1.2.3",
        "eslint-plugin-react": "^7.27.0",
        "eslint-plugin-react-hooks": "^4.3.0",
        "eslint-plugin-testing-library": "^5.6.4",
        "handlebars": "^4.7.7",
        "husky": "^8.0.1",
        "jest": "^28.1.3",
        "jest-changed-files": "^28.1.3",
        "jest-environment-jsdom": "^28.1.3",
        "jest-fetch-mock": "^3.0.3",
        "jest-junit": "^14.0.0",
        "license-checker": "^25.0.1",
        "lint-staged": "^13.0.3",
        "msw": "^0.45.0",
        "nodenv": "^0.1.0",
        "prettier": "^2.5.0",
        "rollup-plugin-license": "^2.8.2",
        "rollup-plugin-visualizer": "^5.8.0",
        "start-server-and-test": "^1.12.1",
        "typescript": "^4.6.4",
        "vite": "^3.1.0"
    },
    "eslintConfig": {
        "extends": "react-app"
    },
    "browserslist": [
        "last 2 versions",
        "last 5 Chrome versions",
        "Firefox >= 90",
        "Edge >= 95",
        "Safari >= 14"
    ],
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
            "prettier --write",
            "git add"
        ]
    },
    "jest": {
        "testEnvironment": "jsdom",
        "setupFilesAfterEnv": [
            "@testing-library/jest-dom",
            "<rootDir>/setupJest.js"
        ],
        "moduleNameMapper": {
            "ReactDOM": "react-dom",
            "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/mocks/fileMock.js",
            "\\.(css|less)$": "<rootDir>/mocks/styleMock.js"
        },
        "moduleDirectories": [
            "node_modules",
            "mocks"
        ]
    },
    "jest-junit": {
        "outputDirectory": "./results/jest"
    },
    "msw": {
        "workerDirectory": ""
    }
}
